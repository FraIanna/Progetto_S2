@model Progetto_S2.Models.Article

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col">
        <h1 class="bg-dark text-light p-3 form-create display-4">Crea un articolo</h1>
        <hr />
        <div class="row">
            <div class="col-6 col-md-4 offset-3 offset-md-4 bg-dark text-light p-4 shadow-lg form-create">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group p-2 text-center fw-bold fs-5">
                        <label asp-for="Name" 
                            class="control-label bg-transparent text-center p-1 rounded-3 mb-2 w-100 shadow-lg border-bottom">
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Nike"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group p-2 text-center fw-bold fs-5">
                        <label asp-for="Price" 
                            class="control-label bg-transparent text-center p-1 rounded-3 mb-2 w-100 shadow-lg border-bottom">
                        </label>
                        <input asp-for="Price" class="form-control" placeholder="50.00"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group p-2 text-center fw-bold fs-5">
                        <label asp-for="Description" 
                            class="control-label bg-transparent text-center 
                            p-1 rounded-3 mb-2 w-100 shadow-lg border-bottom">
                        </label>
                        <textarea asp-for="Description" class="form-control" placeholder="Scarpa da tennis per campi..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group p-2 text-center fw-bold fs-5">
                        <label asp-for="CoverImageUrl" 
                            class="control-label bg-transparent text-center 
                            p-1 rounded-3 mb-2 w-100 shadow-lg border-bottom">
                        </label>
                        <input asp-for="CoverImageUrl" class="form-control" />
                        <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                    </div>

                    <div class="form-group p-2 text-center fw-bold fs-5">
                        <label asp-for="AdditionalImage1" 
                            class="control-label bg-transparent text-center 
                            p-1 rounded-3 mb-2 w-100 shadow-lg border-bottom">
                        </label>
                        <input asp-for="AdditionalImage1" class="form-control"/>
                        <span asp-validation-for="AdditionalImage1" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2 text-center fw-bold fs-5">
                        <label asp-for="AdditionalImage2" 
                            class="control-label bg-transparent text-center 
                            p-1 rounded-3 mb-2 w-100 shadow-lg border-bottom">
                        </label>
                        <input asp-for="AdditionalImage2" class="form-control"/>
                        <span asp-validation-for="AdditionalImage2" class="text-danger"></span>
                    </div>

                    <div class="form-group pt-3 d-flex flex-column align-items-center gap-2">
                        <button type="submit" class="btn btn-outline-light w-50">Crea Articolo</button>
                        <a asp-action="Index" class="link-light">Back to List</a>
                    </div>
                </form>
            </div>
        </div>

        <div>
           
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
